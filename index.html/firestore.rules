rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if true;  // Все могут читать
      allow write: if request.auth != null ||  // Авторизованные
                   request.resource.data.username == userId;  // Или владелец
    }
    
    match /online/{userId} {
      allow read: if true;  // Все видят онлайн
      allow create: if request.resource.data.username == userId;  // Только себя
      allow update: if request.resource.data.username == userId;
      allow delete: if request.resource.data.username == userId;
    }
  }
}